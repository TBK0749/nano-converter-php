{
    "name": "s-patompong/nano-converter-php",
    "description": "Convert between Nano currency units.",
    "keywords": [
        "s-patompong",
        "nano_converter_php"
    ],
    "homepage": "https://github.com/s-patompong/nano-converter-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Patompong Savaengsuk",
            "email": "p.pangpond@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "brick/math": "^0.9.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "SPatompong\\NanoConverter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SPatompong\\NanoConverter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
